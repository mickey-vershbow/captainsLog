<!DOCTYPE html>
<html lang="en">
  <!-- THE HEAD TAG PARTIAL -->
  <%- include("partials/head") %>
  <body>
    <!-- THE HEADER TAG PARTIAL -->
    <%- include("partials/header") %>

  <section class="hero is-primary is-small has-text-centered">
      <div class="hero-body">
        <p class="title is-large">Captain's Log</p>
        <p class="subtitle">Index as of <%= time %> Eastern Standard Time</p>
      </div>
    </section>
        <br>


        <!-- THE CREATE BUTTON -->
        <a href="/logs/new"><button class="button is-normal is-fullwidth is-outlined" id="create-button">Create A New Log</button></a>


 <ul class="captain-index">
  <% for (let i =0; i < logs.length; i++) { %>
    <div class="tile is-ancestor">
      <div class="tile is-vertical is-8">
        <div class="tile">
          <div class="tile is-parent is-vertical">
              <article class="tile is-child notification .is-$grey-dark">
        <li>
            <h1 class="title"><a href="/logs/<%=logs[i].id; %>"> <%=logs[i].title; %> </a></h1>
        </li>
<br><br>

<div class="field is-grouped" id="index-buttons">
        <!-- EDIT LINK -->

<a class="button is-medium is-outlined" href="/logs/<%=logs[i].id %>/edit" id="edit-button">Edit Log</a>


<br><br>
      <!-- DELETE FORM -->

      <form action="/logs/<%=logs[i].id; %>?_method=DELETE" method="POST" class="delete-button">
            <input type="submit" value="Delete Log" class="button is-danger is-outlined is-small"/>
      </form>
        </article>
        </div>
      </div>
    </div>
   </div>
</div>
        <% } %>
        </ul><br /><br />
  


    <!-- THE FOOTER TAG PARTIAL -->
    <%- include("partials/footer") %>
  </body>
</html>
